<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.viveksb007.attendenceserver.MainActivity">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_hotspot" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_hotspot" />

        <TextView
            android:id="@+id/tvIPinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_info"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvSocketInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socket Info" />

        <TextView
            android:id="@+id/tvClientInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client info" />

    </LinearLayout>
</ScrollView>